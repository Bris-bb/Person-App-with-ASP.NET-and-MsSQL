@model PersonApp.Models.custom_setting

@{
    Layout = null;
}

@Html.Partial("header", "Dashboard")


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h2>Setting</h2>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ID)

    <div class="form-group">
        <label class="control-label col-md-2" for="admin_email">Admin Email</label>
        <div class="col-md-4">
            <input class="form-control text-box single-line" id="admin_email" name="admin_email" type="text" value="@ViewBag.admin_url">
            @Html.ValidationMessageFor(model => model.admin_email, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2" for="old_password">Old Password</label>
        <div class="col-md-4">
            <input class="form-control text-box single-line" id="old_password" name="old_password" type="text" value="">
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2" for="password">New Password</label>
        <div class="col-md-4">
            <input class="form-control text-box single-line" id="password" name="password" type="text" value="">
        </div>
    </div>
    
    <div class="form-group">
        <label class="control-label col-md-2" for="smtp_domain">SMTP Domain</label>
        <div class="col-md-4">
            @Html.EditorFor(model => model.smtp_domain, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.smtp_domain, "", new { @class = "text-danger" })
        </div>
        <label class="control-label col-md-1" for="port">Port</label>
        <div class="col-md-2">
            @Html.EditorFor(model => model.port, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.port, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2" for="notify_email">Notify Email</label>
        <div class="col-md-4">
            @Html.EditorFor(model => model.notify_email, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.notify_email, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2" for="theme">Theme</label>
        <div class="col-md-4">
            @Html.EditorFor(model => model.theme, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.theme, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}
    </div>
    </div>
    </div>
@Html.Partial("right_container", "Dashboard")
    </div>
